<%- include('header') -%>


<div class="container">
    <div class="row">
        <div class="col-8">
            <img src="/public/images/posts/<%= post.image %>" class="w-100 img-fluid">
        </div>
        <div class="col-4">
            <div>
                <div class="d-flex align-items-center">
                    <div class="pr-3">
                        <img src="/public/images/profiles/<%= postUser.image %>" class="rounded-circle w-100 profile-img">
                    </div>
                    <div>
                        <div class="font-weight-bold">
                            <a href="/profile/<%= postUser.username %>">
                                <span class="text-dark"><%= postUser.username %></span>
                            </a>
                        </div>
                    </div>
                </div>

                <hr>

                <div class="mt-5">
                    <span class="font-weight-bold">
                        <a href="/profile/<%= postUser.username %>">
                            <span class="text-dark"><%= postUser.username %></span>
                        </a>
                    </span> <%= post.description %>
                </div>
            </div>
        </div>
    </div>
</div>


<%- include('footer') -%>